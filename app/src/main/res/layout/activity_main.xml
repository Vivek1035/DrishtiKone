<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_black"
        android:id="@+id/imageView"
        android:contentDescription="Camera Preview with Object Detection" />

    <TextView
        android:id="@+id/detectedObjectsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent_black"
        android:padding="16dp"
        android:text="@string/detected_objects"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:contentDescription="@string/detected_objects" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/drishti_blue"
        android:padding="12dp"
        android:text="@string/back"
        android:textColor="@color/white"
        android:contentDescription="@string/back" />

</RelativeLayout>